# Cursor Rules (machine-readable, concise)

[project]
name = "GComputer"
stack = ["electron", "typescript", "svelte", "tailwind", "vite"]

[paths.aliases]
renderer = "app/renderer/src"
views = "app/renderer/src/views"
ts = "app/renderer/src/ts"
features = "app/renderer/src/ts/features"
components = "app/renderer/src/components"

[renderer]
entry_html = "app/renderer/index.html"
entry_ts = "app/renderer/src/ts/main.ts"

[style]
ts_strict = true
avoid_any = true
naming.variables = "camelCase"
naming.types = "PascalCase"
naming.components = "PascalCase"
folders = "kebab-case"

[architecture]
principles = [
  "views_are_thin",
  "feature_first",
  "shared_components",
  "aliases_for_imports"
]

[security]
electron.contextIsolation = true
electron.nodeIntegration = false

[workflow]
commands.dev = "npm run dev"
commands.build = "npm run build"
commands.typecheck = "npm run typecheck"

[feature_template]
files = [
  "types.ts",
  "service.ts",
  "store.ts"
]


