{% extends 'admin/public_agent/layout.html.twig' %}

{% block content_title %}Public Agents{% endblock %}

{% block main %}
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Code</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for agent in agents %}
            <tr>
                <td>{{ agent.name }}</td>
                <td>{{ agent.code }}</td>
                <td>{{ agent.description|slice(0, 100) ~ (agent.description|length > 100 ? '...' : '') }}</td>
                <td>
                    <a href="{{ path('admin_public_agent_discussions', {'id': agent.id}) }}" class="btn btn-primary btn-sm">View Discussions</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No public agents found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %} 