{% extends '@EasyAdmin/page/content.html.twig' %}

{% block head_javascript %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-lg-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="display-4">{{ totalUsers }}</h3>
                            <div>Total Users</div>
                        </div>
                        <i class="fas fa-users fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="display-4">{{ totalAgents }}</h3>
                            <div>Total Agents</div>
                        </div>
                        <i class="fas fa-robot fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card bg-info text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="display-4">{{ totalDiscussions }}</h3>
                            <div>Total Discussions</div>
                        </div>
                        <i class="fas fa-comments fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <br/>

    <h3>Usage Stats</h3>
    <div class="row">
        <div class="col-md-6 col-lg-3">
            <div class="card bg-light mb-4">
                <div class="card-header">Last 24 Hours</div>
                <div class="card-body">
                    <p>Discussions: {{ statsLastDay.nbDiscussions }}</p>
                    <p>Messages: {{ statsLastDay.nbMessages }}</p>
                    <p>Active Users: {{ statsLastDay.activeUsers }}</p>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card bg-light mb-4">
                <div class="card-header">Last 7 Days</div>
                <div class="card-body">
                    <p>Discussions: {{ statsLastWeek.nbDiscussions }}</p>
                    <p>Messages: {{ statsLastWeek.nbMessages }}</p>
                    <p>Active Users: {{ statsLastWeek.activeUsers }}</p>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card bg-light mb-4">
                <div class="card-header">Last 30 Days</div>
                <div class="card-body">
                    <p>Discussions: {{ statsLastMonth.nbDiscussions }}</p>
                    <p>Messages: {{ statsLastMonth.nbMessages }}</p>
                    <p>Active Users: {{ statsLastMonth.activeUsers }}</p>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card bg-light mb-4">
                <div class="card-header">All Time</div>
                <div class="card-body">
                    <p>Discussions: {{ statsTotal.nbDiscussions }}</p>
                    <p>Messages: {{ statsTotal.nbMessages }}</p>
                    <p>Active Users: {{ statsTotal.activeUsers }}</p>
                </div>
            </div>
        </div>
    </div>


    <br/>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Quarter Stats (Fiscal Year {{ selectedFiscalYear }}-{{ selectedFiscalYear + 1 }})</h3>
        <div class="btn-group">
            <a href="{{ path('admin_with_year', {'year': previousFiscalYear}) }}" class="btn btn-outline-secondary">
                <i class="fas fa-chevron-left"></i> {{ previousFiscalYear }}-{{ previousFiscalYear + 1 }}
            </a>
            {% if selectedFiscalYear != currentFiscalYear %}
                <a href="{{ path('admin') }}" class="btn btn-outline-primary">Current Year</a>
            {% endif %}
            {% if selectedFiscalYear < currentFiscalYear %}
                <a href="{{ path('admin_with_year', {'year': nextFiscalYear}) }}" class="btn btn-outline-secondary">
                    {{ nextFiscalYear }}-{{ nextFiscalYear + 1 }} <i class="fas fa-chevron-right"></i>
                </a>
            {% endif %}
        </div>
    </div>

    <div class="row">
        {% for quarter, stats in quarterlyStats %}
            <div class="col-md-6 col-lg-3">
                <div class="card bg-light mb-4">
                    <div class="card-header">
                        <strong>{{ quarter }}</strong>
                        {% if quarter == 'Q1' %}
                            (Apr-Jun {{ selectedFiscalYear }})
                        {% elseif quarter == 'Q2' %}
                            (Jul-Sep {{ selectedFiscalYear }})
                        {% elseif quarter == 'Q3' %}
                            (Oct-Dec {{ selectedFiscalYear }})
                        {% else %}
                            (Jan-Mar {{ selectedFiscalYear + 1 }})
                        {% endif %}
                    </div>
                    <div class="card-body">
                        {% if stats.nbDiscussions > 0 or stats.nbMessages > 0 or stats.activeUsers > 0 %}
                            <p>Discussions: {{ stats.nbDiscussions }}</p>
                            <p>Messages: {{ stats.nbMessages }}</p>
                            <p>Active Users: {{ stats.activeUsers }}</p>
                        {% else %}
                            <p class="text-muted">Discussions: N/A</p>
                            <p class="text-muted">Messages: N/A</p>
                            <p class="text-muted">Active Users: N/A</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Weekly Discussions (Last 2 Months)</div>
                <div class="card-body">
                    <canvas id="weeklyChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Monthly Discussions (Last Year)</div>
                <div class="card-body">
                    <canvas id="monthlyChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Weekly Messages (Last 2 Months)</div>
                <div class="card-body">
                    <canvas id="weeklyMessageChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Monthly Messages (Last Year)</div>
                <div class="card-body">
                    <canvas id="monthlyMessageChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    {# If you want to keep the default EA content, include it here #}
    {{ parent() }}


    <script>
        document.addEventListener('DOMContentLoaded', function() {
            new Chart(document.getElementById('weeklyChart'), {
                type: 'bar',
                data: {
                    labels: {{ weeklyStats|map(s => s.weekYear)|json_encode|raw }},
                    datasets: [{
                        label: 'Weekly Discussions',
                        data: {{ weeklyStats|map(s => s.count)|json_encode|raw }},
                        backgroundColor: 'rgba(54, 162, 235, 0.5)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });

            new Chart(document.getElementById('monthlyChart'), {
                type: 'bar',
                data: {
                    labels: {{ monthlyStats|map(s => s.monthYear)|json_encode|raw }},
                    datasets: [{
                        label: 'Monthly Discussions',
                        data: {{ monthlyStats|map(s => s.count)|json_encode|raw }},
                        backgroundColor: 'rgba(75, 192, 192, 0.5)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });

            // Message Charts
            new Chart(document.getElementById('weeklyMessageChart'), {
                type: 'bar',
                data: {
                    labels: {{ weeklyMessageStats|map(s => s.weekYear)|json_encode|raw }},
                    datasets: [{
                        label: 'Weekly Messages',
                        data: {{ weeklyMessageStats|map(s => s.count)|json_encode|raw }},
                        backgroundColor: 'rgba(255, 99, 132, 0.5)',
                        borderColor: 'rgba(255, 99, 132, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });

            new Chart(document.getElementById('monthlyMessageChart'), {
                type: 'bar',
                data: {
                    labels: {{ monthlyMessageStats|map(s => s.monthYear)|json_encode|raw }},
                    datasets: [{
                        label: 'Monthly Messages',
                        data: {{ monthlyMessageStats|map(s => s.count)|json_encode|raw }},
                        backgroundColor: 'rgba(153, 102, 255, 0.5)',
                        borderColor: 'rgba(153, 102, 255, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });
    </script>
{% endblock %}